@{
    ViewData["Title"] = "Logout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Log Out</h3>
            </div>
            <div class="card-body text-center">
                <div class="mb-4">
                    <i class="fas fa-sign-out-alt fa-3x text-warning mb-3"></i>
                    <h5>Are you sure you want to log out?</h5>
                    <p class="text-muted">You will be disconnected from the system.</p>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <form asp-action="Logout" method="post" class="me-md-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-sign-out-alt"></i> Yes, Log Out
                        </button>
                    </form>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>