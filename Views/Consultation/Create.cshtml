@model system_petshop.Models.Consultation

@{
    ViewData["Title"] = "Consultation";
}

<h2 class="text-center">New Consultation</h2>

<div class="row">
    <div class="col-md-6 mx-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-2">
                <label asp-for="ConsultationDate" class="control-label">Consultation Date</label>
                <input asp-for="ConsultationDate" class="form-control" />
                <span asp-validation-for="ConsultationDate" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="AnimalId" class="control-label">Animal</label>
                <select asp-for="AnimalId" class="form-control" asp-items="ViewBag.AnimalId"></select>
                <span asp-validation-for="AnimalId" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="VeterinarianId" class="control-label">Veterinarian</label>
                <select asp-for="VeterinarianId" class="form-control" asp-items="ViewBag.VeterinarianId"></select>
                <span asp-validation-for="VeterinarianId" class="text-danger"></span>
            </div>

            <div class="d-flex mb-2">
                <input type="submit" value="Create" class="btn btn-primary flex-fill me-2" />
                <a asp-action="Index" class="btn btn-warning flex-fill">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
