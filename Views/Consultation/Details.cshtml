@using System.Security.Claims
@model system_petshop.Models.Consultation

@{
    ViewData["Title"] = "Consultation";
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<h2 class="text-center mb-4">Consultation Details</h2>

<div class="container w-75">
    <div class="mb-2 d-flex justify-content-between border-bottom pb-1">
        <strong>Date:</strong>
        <span>@Model.ConsultationDate.ToShortDateString()</span>
    </div>
    <div class="mb-2 d-flex justify-content-between border-bottom pb-1">
        <strong>Note:</strong>
        <span>@Model.Note</span>
    </div>
    <div class="mb-2 d-flex justify-content-between border-bottom pb-1">
        <strong>Animal:</strong>
        <span>@Model.Animal?.Name</span>
    </div>
    <div class="mb-4 d-flex justify-content-between border-bottom pb-1">
        <strong>Veterinarian:</strong>
        <span>@Model.Veterinarian?.GetType().Name</span>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model?.ConsultationId" class="btn btn-info w-50">Edit</a>
        <a asp-action="ConsultationByUser" asp-route-id="@userId" class="btn btn-warning w-50">Back to list</a>
    </div>
</div>
