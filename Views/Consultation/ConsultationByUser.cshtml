@model IEnumerable<system_petshop.Models.Consultation>

@{
    ViewData["Title"] = "Consultation";
}

<h1>Pet consultation</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Consultation Date
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Veterinarian)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ConsultationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Animal.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Veterinarian.Name)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ConsultationId" class="btn btn-secondary">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
