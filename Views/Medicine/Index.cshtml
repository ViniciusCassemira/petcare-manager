@model IEnumerable<system_petshop.Models.Medicine>

@{
    ViewData["Title"] = "Medicine";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.MedicineId" class="btn btn-info">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.MedicineId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
