@using System.Security.Claims
@model system_petshop.Models.Animal

@{
    ViewData["Title"] = "Animal";
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<h2 class="text-center mb-4">Detalhes do Pet</h2>

<div class="container w-75">
    <div class="mb-2 d-flex justify-content-between border-bottom pb-1">
        <strong>Nome:</strong>
        <span>@Model.Name</span>
    </div>
    <div class="mb-2 d-flex justify-content-between border-bottom pb-1">
        <strong>Descrição:</strong>
        <span>@Model.Description</span>
    </div>
    <div class="mb-2 d-flex justify-content-between border-bottom pb-1">
        <strong>Data de Nascimento:</strong>
        <span>@Model.DateBirth.ToShortDateString()</span>
    </div>
    <div class="mb-2 d-flex justify-content-between border-bottom pb-1">
        <strong>Raça:</strong>
        <span>@Model.Breed?.Name</span>
    </div>
    <div class="mb-2 d-flex justify-content-between border-bottom pb-1">
        <strong>Espécie:</strong>
        <span>@Model.Species?.Name</span>
    </div>
    <div class="mb-4 d-flex justify-content-between border-bottom pb-1">
        <strong>Cliente:</strong>
        <span>@Model.Client?.GetType().Name</span>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model?.AnimalId" class="btn btn-info w-50">Edit</a>
        <a asp-action="AnimalByUser" asp-route-id="@userId" class="btn btn-warning w-50">Back to list</a>
    </div>
</div>
