@model IEnumerable<system_petshop.Models.Veterinarian>

@{
    ViewData["Title"] = "Veterinarian";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cfmv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassHash)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cfmv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialty.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassHash)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-secondary">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-alert">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
