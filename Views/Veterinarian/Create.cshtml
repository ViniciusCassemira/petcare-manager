@model system_petshop.Models.Veterinarian

@{
    ViewData["Title"] = "Veterinarian";
}

<h2 class="text-center">Create Veterinarian</h2>

<div class="row">
    <div class="col-md-4 w-50 mx-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Cfmv" class="form-label"></label>
                <input asp-for="Cfmv" class="form-control" />
                <span asp-validation-for="Cfmv" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SpecialtyId" class="form-label">Specialty</label>
                <select asp-for="SpecialtyId" class="form-select" asp-items="@(ViewData["SpecialtyId"] as SelectList)"></select>
            </div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="PassHash" class="form-label"></label>
                <input asp-for="PassHash" class="form-control" type="password" />
                <span asp-validation-for="PassHash" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <input type="submit" value="Create" class="btn btn-primary flex-fill" />
                <a asp-controller="Admin" asp-action="ShowUsers" class="btn btn-warning flex-fill">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
