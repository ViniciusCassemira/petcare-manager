@model system_petshop.Models.Species

@{
    ViewData["Title"] = "Species";
}

<h2 class="text-center" Create Specie</h2>

<div class="row">
    <div class="col-md-4 w-50 mx-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="d-flex mb-2">
                <input type="submit" value="Create" class="btn btn-primary flex-fill" />
                <a asp-action="Index" class="btn btn-warning flex-fill">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
